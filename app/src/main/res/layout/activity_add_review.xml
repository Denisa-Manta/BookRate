<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <include
        layout="@layout/custom_toolbar"
        android:id="@+id/customToolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/logo"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="BookRate Logo" />

            <ImageView
                android:id="@+id/chatIllustration"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:src="@drawable/review_page"
                android:adjustViewBounds="true"
                android:contentDescription="Chat Illustration" />

            <TextView
                android:id="@+id/reviewHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write your review:"
                android:textSize="25sp"
                android:textColor="@color/accentGreen"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/reviewEditText"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="Max 500 characters"
                android:gravity="top|start"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:maxLength="500"
                android:inputType="textMultiLine"
                android:lines="6" />

            <Button
                android:id="@+id/postReviewButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POST REVIEW"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/buttonWhite"
                android:background="@drawable/rounded_button"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
