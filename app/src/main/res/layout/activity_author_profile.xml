<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="top|center_horizontal"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/authorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author Name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/accentGreen"
        android:layout_marginBottom="24dp" />

    <ImageView
        android:id="@+id/authorProfileImageView"
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:src="@drawable/placeholder_image"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="24dp"
        android:padding="4dp"
        android:contentDescription="Profile Image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Behind every great book is a brave author. Thank you for being one."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/accentGreen"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/createReaderAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREATE A READER ACCOUNT"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/buttonWhite"
        android:background="@drawable/rounded_button"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/logoutButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:layout_marginTop="2dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="18sp"
        android:textColor="@color/buttonWhite"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="24dp" />


</LinearLayout>
