<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/detailBookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOOKRATE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_purple"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/detailBookImage"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="Book Cover"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/detailBookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/detailBookGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <Spinner
            android:id="@+id/detailBookStateSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <RatingBar
            android:id="@+id/detailUserRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="false"
            android:layout_marginTop="8dp" />

        <RatingBar
            android:id="@+id/detailAverageRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/averageRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average: 0.0"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</ScrollView>
