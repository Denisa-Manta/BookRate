<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Chat Requests Button -->
    <ImageButton
        android:id="@+id/openChatRequestsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_dialog_email"
        android:background="@android:color/transparent"
        android:contentDescription="Open Chat Requests"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/openActiveChatsButton"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Active Chats Button -->
    <ImageButton
        android:id="@+id/openActiveChatsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_send"
        android:background="@android:color/transparent"
        android:contentDescription="Open Active Chats"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/authorProfileButton"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Author Profile Button -->
    <ImageButton
        android:id="@+id/authorProfileButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_profile_2"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Author Profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/authorWelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Author!"
        android:textSize="24sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/authorProfileButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/authorBooksRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/authorWelcomeText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
